#!/bin/bash

PATH_TO_POLKIT="/var/lib/polkit-1/localauthority/90-mandatory.d"
PATH_TO_RSRC="/usr/share/senia-virtual-tic/rsrc/" 

fix_menu(){
	zenity --info --text="Su sesion se reiniciara"
	rm -rf $HOME/.config
	mkdir -p $HOME/.config/ubuntu-mate/welcome/
	cat << EOF > $HOME/.config/ubuntu-mate/welcome/preferences.json
{"autostart": false, "hide_non_free": false}
EOF
	mate-session-save --force-logout
}

clean_firefox(){
	echo "killall firefox || true"
	echo "rm -rf $HOME/.mozilla"
	
}

fix_usb(){
    cp ${PATH_TO_RSRC}/senia-polkit.pkla  ${PATH_TO_POLKIT}/
    zenity --info --text "Es necesario reniciar el equipo"
    reboot
}


ans=$(zenity  --list  --text "Parece que est치 teniendo problemas, en que le puedo ayudar?" --radiolist  --column "Elija una" --column "Acci칩n" TRUE "El Menu no est치" FALSE "Limpia el Firefox" FALSE "Los USBs me piden contrasenya")

echo $ans

case "$ans" in
	"El Menu no est치")
		fix_menu
	        ;;
        
	"Limpia el Firefox")
		clean_firefox
	        ;;
        
        "Los USBs me piden contrasenya")
            fix_usb
            ;;
	*)
		echo "Desconocido"
	;;
esac

exit 0
