#!/bin/bash

#/var/lib/polkit-1/localauthority
#[Mounting, checking, etc. of internal drives]
#Identity=unix-group:admin;unix-group:sudo
#Action=org.freedesktop.udisks.filesystem-*;org.freedesktop.udisks.drive-ata-smart*;org.freedesktop.udisks2.filesystem-mount-system;org.freedesktop.udisks2.encrypted-unlock-system;org.freedesktop.udisks2.filesystem-fstab;
#ResultActive=yes



fix_menu(){
	echo "rm -rf $HOME/.config/"
	echo "mate-session-save"
}

clean_firefox(){
	echo "killall firefox || true"
	echo "rm -rf $HOME/.mozilla"
	
}


ans=$(zenity  --list  --text "Parece que est치 teniendo problemas, en que le puedo ayudar?" --radiolist  --column "Elija una" --column "Acci칩n" TRUE "El Menu no est치" FALSE "Limpia el Firefox" FALSE "Los USBs me piden contrasenya")

echo $ans

case "$ans" in
	"El Menu no est치")
		fix_menu
	;;
	"Limpia el Firefox")
		clean_firefox
	;;
	*)
		echo "holis"
	;;
esac

exit 0