#!/bin/bash


# This script is licensed
# under GPLv3 or Higher.


SENIA_VERSION_PATH="/etc/senia-version.d/"

# Some useful functions
die(){
    echo " [ senia-version ] Error : $1"
    exit 1
}

if [ ! -d ${SENIA_VERSION_PATH} ]; then
    die " Not Path for Version : ${SENIA_VERSION_PATH}"
fi

# Normal behaviour
SENIA_VERSION_DATE=$(dpkg -l| grep senia-cdd | head -n 1 | tr -s " " | cut -d " " -f3)
SENIA_VERSION_ITEMS=$(cat /etc/senia-version.d/* | tr "\n" " ")

echo " * Senia Version : ${SENIA_VERSION_DATE} ${SENIA_VERSION_ITEMS}"





